<UserControl x:Class="MSProgrammerCalculator.Views.DisplayView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MSProgrammerCalculator.Views"
             mc:Ignorable="d"
             d:DesignWidth="600"
             d:DesignHeight="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" MaxHeight="60"/>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="1*" MaxHeight="45"/>
            <RowDefinition Height="1*" MaxHeight="45"/>
            <RowDefinition Height="1*" MaxHeight="45"/>
            <RowDefinition Height="1*" MaxHeight="45"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Background="Red"/>
        <Border Grid.Row="1" Background="Green"/>
        <Border Grid.Row="2" Background="Blue"/>
        <Border Grid.Row="3" Background="Yellow"/>
        <Border Grid.Row="4" Background="Gray"/>
        <Border Grid.Row="5" Background="Khaki"/>
    </Grid>
</UserControl>
