<UserControl x:Class="MSProgrammerCalculator.Controls.BitKeypadButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MSProgrammerCalculator.Controls"
             mc:Ignorable="d"
             d:DesignWidth="100"
             d:DesignHeight="60">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ToggleButton Grid.Row="0" Grid.Column="0" Background="Transparent" BorderThickness="0" Content="0"/>
        <ToggleButton Grid.Row="0" Grid.Column="1" Background="Transparent" BorderThickness="0" Content="0"/>
        <ToggleButton Grid.Row="0" Grid.Column="2" Background="Transparent" BorderThickness="0" Content="0"/>
        <ToggleButton Grid.Row="0" Grid.Column="3" Background="Transparent" BorderThickness="0" Content="0"/>
        <TextBlock Grid.Row="1" Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center" Text="0"/>
    </Grid>
</UserControl>
